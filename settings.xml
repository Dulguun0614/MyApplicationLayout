<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate notifications"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn notifications for classes on and off"
        android:textSize="10sp"
        android:paddingTop="5dp"
        android:paddingLeft="25dp"
        android:id="@+id/Text2"
        android:layout_below="@+id/text1"
        />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Text2"
        android:layout_toEndOf="@+id/Text2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate vibration"
        android:id="@+id/Text3"

        android:layout_marginEnd="22dp"
        android:layout_below="@+id/Text2"
        android:layout_alignEnd="@+id/text1"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate vibration when you recieve notifications"
        android:textSize="10sp"
        android:layout_below="@+id/Text3"
        android:layout_alignStart="@+id/Text3"
        android:layout_marginTop="11dp"
        android:id="@+id/textView" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/switch1"
        android:layout_toEndOf="@+id/Text2" />



